# Example credentials file for Blind Spotify
# Copy this structure to your Rails credentials:
#   rails credentials:edit

# --- Deezer (Currently Active) ---
# Get credentials from: https://developers.deezer.com/myapps
deezer:
  app_id: your_deezer_app_id
  app_secret: your_deezer_app_secret

# Alternatively, use environment variables:
#   DEEZER_APP_ID=your_app_id
#   DEEZER_APP_SECRET=your_app_secret

# --- Spotify (Currently Disabled) ---
# Get credentials from: https://developer.spotify.com/dashboard
spotify:
  client_id: your_spotify_client_id
  client_secret: your_spotify_client_secret

# Alternatively, use environment variables:
#   SPOTIFY_CLIENT_ID=your_client_id
#   SPOTIFY_CLIENT_SECRET=your_client_secret
